<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2 class="mt-3">User info</h2>
        <%= attachment_image_tag @book, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th><th><%= @book.name %></th>
            </tr>
            <tr>
              <th>Introduction</th><th><%= @book.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@book.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book_new, local:true do |f| %>
        <div class="form group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class:"form-control book_title", id:"book_title" %>
        </div>
        <div class="form group my-3">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class:"form-control book_body", id:"book_body" %>
        </div>
        <%= f.submit 'Crate Book', class:"btn btn-success" %>
        <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2 class="mt-3">Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><a class="attachment user profile_image fallback"><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></a></td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

