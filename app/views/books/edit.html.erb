<div class='container'>
    <div class='row'>
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2 class="mt-3">Editing Book</h2>
       <% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
     <%= form_with model:@book, local:true do |f| %>
     <div class="form group">
       <label for="book_title">Title</label>
       <%= f.text_field :title, autofocus: true, class:"form-control book_title", id:"book_title"%>
     </div>
     <div class="form group my-3">
       <label for="book_opinion">Opinion</label>
       <%= f.text_area :body, class:"form-control book_body", id:"book_body"%>
     </div>

     <%= f.submit "Update Book", class:"btn btn-success mb-3" %>
     <% end %>
     <%= link_to "Show",book_path(@book.id) %>
     |
     <%= link_to "Back",books_path %>
     </div>
    </div>
  </div>