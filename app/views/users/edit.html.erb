<main>
  <div class='container'>
    <div class='row'>
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>User info</h2>
     <%= form_with model:@user, local:true do |f| %>
     <div class="form group">
       <label for="inputName">Name</label>
       <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前"%>
     </div>
     <div class="form group my-3">
       <label for="inputImage ">Image</label>
       <%= f.attachment_field :profile_image, class:"form-control-file"%>
     </div>
     <div class="form group mb-3">
       <label for="user_introduction">Introduction</label>
       <%= f.text_area :introduction, class:"form-control introduction", id:"user_introduction", placeholder:"自己紹介文"%>
     </div>

     <%= f.submit "Update User", class:"btn btn-secondary" %>
     <% end %>
     </div>
    </div>
  </div>
</main>